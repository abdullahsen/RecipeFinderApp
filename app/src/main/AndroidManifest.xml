<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abdullahsen.recipefinderapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".RecipeFinderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeFinderApp">
        <activity
            android:name=".view.activities.AddUpdateRecipeActivity"
            android:theme="@style/Theme.RecipeFinderApp.NoActionBar"
            android:configChanges="orientation"/>
        <activity
            android:name=".view.activities.SplashActivity"
            android:theme="@style/Theme.RecipeFinderApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>